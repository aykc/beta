%a
  = link_to "back", items_path

%h1
  = @category.name
- form_for @item do |f|
  %p
    = f.label :name
  %p
    = f.text_field :name
  %div
    - @category.option_groups.each do |group|
      %h2
        = group.name
      %ul
        - group.options.each do |option|
          - f.fields_for @item.option_values.new do |val|
            %li
              = option.name
              = val.collection_select(:option_value_id, option.option_values.all, :id, :value)
  = f.submit "Create new"